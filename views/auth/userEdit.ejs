<%- include("../partials/header") %>
<div id="user-edit-container" class="container mt-5">
  <%- include("../partials/appName") %>
  <div class="row ">
    <div class="  col-8  justify-content-center">
          <h1 id="title">Edit User Account</h1>

          <% if(typeof errors !== "undefined"){%>
            <% errors.forEach((error)=>{ %>
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <%= error.msg %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            <% })%>
            
          <% }%>

          
          <form action="/users/user-edit/<%= user._id %>" method="POST">
            
            <div class="form-group">
              <label for="firstName">First Name</label>
              <input autocomplete="off" type="text" value="<%= user.firstName %>" class="form-control input-fields-register-styles" id="firstName" name="firstName" >
            </div>
            <div class="form-group">
              <label for="lastName">Last Name</label>
              <input autocomplete="off" type="text" class="form-control" id="lastName" name="lastName" value="<%= user.lastName %>">
            </div>
            
            <div class="form-group">
              <label for="email">Email</label>
              <input autocomplete="off" type="email" class="form-control" id="email" name="username" value="<%= user.username %>">
            </div>
            <div class="is-admin-container form-group col-6">
              <label >Is Admin</label>
              <select class="selectpicker" name="isAdmin" >
                <option value="<%= user.isAdmin %>"><%= user.isAdmin == true ? "Yes" : "No" %></option>
                <option value="true">Yes</option>
                <option value="false">No</option>
                
              </select>
            </div>
            <div class=" is-active-container form-group col-6">
              <label >Is Account Active</label>
              <select id="userActivePicker" class="selectpicker" name="isActive" >
                <option value="<%= user.active  %>"><%=  user.active == true ? "Yes" : "No" %></option>
                <option value="true">Yes</option>
                <option value="false">No</option>
                
              </select>
            </div>
            <div class="row">
              <div class="col-4">
                <button type="submit" id="btn-submit" class="btn send-btn ">Submit</button>
              </div>
              <div class="col-4">
                <a href="/users/delete/<%=user._id%>" class="btn btn-delete">Delete</a>
              </div>
            </div>
            
          </form>
        
        
   
    </div>


  </div>
  <%- include("../partials/credits") %>
</div>

<%- include("../partials/footer") %>
<script>

</script>